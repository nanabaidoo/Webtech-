            background-image: linear-gradient(to bottom, rgba(8, 9, 10, 0.372), rgba(44, 13, 36, 0.73)),url('https://images.unsplash.com/photo-1573856631239-eb02c9fd8c1d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80');
